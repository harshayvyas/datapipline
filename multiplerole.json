{
  "AWSTemplateFormatVersion": "2010-09-09",
  "Description": "AWS CloudFormation template IAM Roles with Permissions Boundary",
  "Resources":{
    "LambdaRole":{
      "Type": "AWS::IAM::Role",
      "Properties":{
        "AssumeRolePolicyDocument":
           {
              "Version": "2012-10-17",
              "Statement": [
                  {
                      "Action": "sts:AssumeRole",
                      "Principal": {
                          "Service": "lambda.amazonaws.com"
                      },
                      "Effect": "Allow",
                      "Sid": ""
                  }
              ]
          },
        "Path": "/CustomerManaged/",
        "RoleName": "LambdaRole",
        "ManagedPolicyArns":[
       "arn:aws:iam::aws:policy/service-role/AWSLambdaBasicExecutionRole",
       "arn:aws:iam::aws:policy/AmazonElasticMapReduceFullAccess"
		]}
	},

    "EMRec2role":{
      "Type": "AWS::IAM::Role",
      "Properties":{
        "AssumeRolePolicyDocument":
           {
              "Version": "2012-10-17",
              "Statement": [
                  {
                      "Action": "sts:AssumeRole",
                      "Principal": {
                          "Service": "elasticmapreduce.amazonaws.com"
                      },
                      "Effect": "Allow",
                      "Sid": ""
                  }
              ]
          },
        "Path": "/CustomerManaged/",
        "RoleName": "EMR-ec2-role",
        "ManagedPolicyArns":[
        "arn:aws:iam::aws:policy/service-role/AWSLambdaBasicExecutionRole",
         "arn:aws:iam::aws:policy/AmazonElasticMapReduceFullAccess"
		]}
	}
	}
	}